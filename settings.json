{
  "close_on_file_delete": true,
  "base_keymap": "JetBrains",
  "git_panel": {
    "status_style": "icon",
  },
  "outline_panel": {
    "indent_size": 20.0,
  },
  "project_panel": {
    "indent_size": 20.0,
    "sticky_scroll": false,
  },
  "autosave": "on_focus_change",
  "icon_theme": "Material Icon Theme",
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "ui_font_family": "Hack Nerd Font",
  "buffer_font_family": "Hack Nerd Font",
  "collaboration_panel": {
    "button": false,
  },
  "title_bar": {
    "show_sign_in": false,
  },
  "disable_ai": true,
  "ui_font_size": 15.0,
  "buffer_font_size": 13.0,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark",
  },
  "file_types": {
    "Markdown": ["prompt"],
  },
}
